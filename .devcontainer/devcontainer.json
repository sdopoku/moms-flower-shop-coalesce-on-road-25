{
  "name": "dbt-core-devcontainer",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/va-h/devcontainers-features/uv:1": {
      "shellautocompletion": "true"
    },
    "ghcr.io/wxw-matt/devcontainer-features/command_runner:0": {
      "command1": "uv venv dbtcore",
      "command2": "uv pip install dbt-core dbt-snowflake",
      "command3": "curl -fsSL https://public.cdn.getdbt.com/fs/install/install.sh | sh -s -- --update"
    }
  }
}
